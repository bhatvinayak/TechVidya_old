<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2p"
    tools:context=".MechActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.Mech Speech"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textAlignment="center"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/m1"
            android:adjustViewBounds="true"></ImageView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="event1"
            android:text="Register"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.Tech Nature"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textAlignment="center"></TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/m33"
                android:adjustViewBounds="true">

            </ImageView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="event2"
            android:text="Register"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.Fast Hands on Lathe"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textAlignment="center"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/m3"></ImageView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="event3"
            android:text="Register"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.Tech CAED"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textAlignment="center"></TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/m4"
            android:adjustViewBounds="true">

        </ImageView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="event4"
            android:text="Register"></Button>
    </LinearLayout>
</ScrollView>